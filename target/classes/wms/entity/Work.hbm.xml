<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	 "-//Hibernate/Hibernate Mapping DTD//EN"
	 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
	
<hibernate-mapping>
	<class name="wms.entity.Work" table="work">
		<meta attribute="class-description">
		This class contains the work detail. 
		</meta>
		<!-- name="实体表属性" column="数据库表属性" -->
		<id name="w_id" column="w_id " type="int" />	
		<property name="w_title" column="w_title " type="string" />	
		<property name="w_content" column="w_content" type="string"/>
		<property name="w_deadline" column="w_deadline" type="string"/>	
		<property name="w_course" column="w_course" type="string"/>	
		<property name="w_t_account" column="w_t_account" type="string"/>	
		<property name="w_c_id" column="w_c_id" type="string"/>	
	</class>
</hibernate-mapping>